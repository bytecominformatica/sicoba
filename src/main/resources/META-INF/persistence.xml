<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">

	<persistence-unit name="teste-pu" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.comercial.Bairro</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.comercial.Cidade</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.comercial.Cliente</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.comercial.Contrato</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.comercial.Endereco</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.estoque.Equipamento</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.comercial.Estado</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.financeiro.Mensalidade</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.comercial.Pais</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.comercial.Plano</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.financeiro.retorno.Header</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.financeiro.retorno.Trailer</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.financeiro.retorno.HeaderLote</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.financeiro.retorno.Registro</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.financeiro.retorno.RegistroDetalhe</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.financeiro.retorno.TrailerLote</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.administrador.UserAccount</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.administrador.AccessGroup</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.administrador.Authentication</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.extra.ClienteGeoReferencia</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.financeiro.Cedente</class>
		<class>br.com.clairtonluz.bytecom.util.converter.date.LocalDatePersistenceConverter</class>
		<class>br.com.clairtonluz.bytecom.util.converter.date.LocalDateTimePersistenceConverter</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.provedor.impl.Mikrotik</class>
		<class>br.com.clairtonluz.bytecom.model.jpa.entity.comercial.Conexao</class>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bytecom" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="bytecom" />
			<property name="javax.persistence.jdbc.password" value="bytecom" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="false" />
		</properties>
	</persistence-unit>

	<persistence-unit name="bytecom-pu" transaction-type="JTA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:/bytecomDS</jta-data-source>

		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="false" />
		</properties>
	</persistence-unit>
</persistence>